<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    app:contentPadding="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_subject"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_home_white_24dp" />

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_subject"
            android:textColor="@color/textColorSecondary"
            android:text="@string/subjects_name"/>

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_subject"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:text="@string/question_title"/>

        <TextView
            android:id="@+id/tv_question_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_question_title"
            android:textColor="@color/textColorSecondary"
            android:text="@string/question_contents2"/>

        <TextView
            android:id="@+id/tv_question_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/tv_question_contents"
            android:layout_toLeftOf="@+id/tv_question_like"
            android:text="回答：66" />

        <TextView
            android:id="@+id/tv_question_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_question_contents"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="赞：999" />

    </RelativeLayout>

</android.support.v7.widget.CardView>